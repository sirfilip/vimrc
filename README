execute pathogen#infect()

set autoindent
set smartindent
set nobackup
set noswapfile
set ignorecase
set virtualedit=all
set cpoptions+=$
set shiftwidth=2
set tabstop=2
set expandtab
set wildmenu
set number
set hlsearch
set autowrite

filetype plugin indent on

let mapleader=','
let g:miniBufExplorerMoreThanOne = 0

" map <leader>m :MBEOpen<cr>
map j gj
map k gk

if has("gui_running")
  inoremap <C-v> <ESC>:set paste<CR>"+gp<ESC>:set nopaste<ENTER>i<RIGHT>
  cmap <C-V> "+gP
endif

